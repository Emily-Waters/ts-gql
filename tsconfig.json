{
  "compilerOptions": {
    "target": "es2016",
    "incremental": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true
  },
  "include": ["esbuild.ts", "src/**/*.ts"]
}
